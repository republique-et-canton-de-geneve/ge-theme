{
  "name": "@ael/svg-wrapper-utils",
  "version": "1.0.0",
  "private": false,
  "description": "Utility functions for SVG manipulation in web components (JS + TS types)",
  "license": "Apache-2.0",
  "source": "src/index.js",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/types/index.d.ts",
  "targets": {
    "types": false
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/types/index.d.ts"
    },
    "./index.js": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/types/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "yarn clean && parcel build --dist-dir dist && tsc --emitDeclarationOnly -p tsconfig.json --outDir dist/types",
    "lint": "eslint . --ext .js",
    "typecheck": "echo \"No TypeScript check needed for JS package (only manual .d.ts)\""
  },
  "dependencies": {
    "@swc/helpers": "^0.5.17"
  },
  "devDependencies": {
    "parcel": "2.14.4",
    "eslint": "9.24.0",
    "rimraf": "6.0.1",
    "copyfiles": "2.4.1"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.devops.etat-ge.ch/ctinexus/content/repositories/npm_release/"
  },
  "keywords": [
    "webâ€‘components",
    "geneva",
    "wrapper",
    "svg"
  ]
}
