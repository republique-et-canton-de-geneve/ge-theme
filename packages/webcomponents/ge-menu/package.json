{
  "name": "@ael/ge-menu",
  "version": "0.3.6",
  "private": false,
  "description": "Web‑component that manages an interactive SPA vertical menu.",
  "license": "Apache-2.0",
  "type": "module",
  "source": "src/ge-menu.js",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/types/ge-menu.d.ts",
  "targets": {
    "types": false
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/types/ge-menu.d.ts"
    },
    "./ge-menu.js": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/types/ge-menu.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "parcel index.html --open",
    "clean": "rimraf dist",
    "build": "yarn clean && parcel build --dist-dir dist && tsc --emitDeclarationOnly -p tsconfig.json --outDir dist/types",
    "lint": "eslint . --ext .js",
    "typecheck": "echo \"No TypeScript check needed for JS package (only manual .d.ts)\""
  },
  "dependencies": {
    "@swc/helpers": "^0.5.17",
    "@fontsource/roboto": "5.2.5",
    "@material/web": "2.3.0",
    "lit": "^3.3.0"
  },
  "devDependencies": {
    "copyfiles": "2.4.1",
    "eslint": "9.24.0",
    "parcel": "2.14.4",
    "rimraf": "6.0.1"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.devops.etat-ge.ch/ctinexus/content/repositories/npm_release/"
  },
  "keywords": [
    "web‑components",
    "lit",
    "material design",
    "geneva",
    "menu",
    "design‑system"
  ]
}
