{
  "name": "@ael/file-selector",
  "version": "1.0.6",
  "private": false,
  "description": "Web‑component that renders public Geneva websites footer.",
  "license": "Apache-2.0",
  "type": "module",
  "module": "dist/file-selector.js",
  "targets": {
    "module": {
      "source": "src/file-selector.js"
    },
    "dev": {
      "source": "dev/index.html",
      "distDir": ".dev-dist",
      "includeNodeModules": true
    }
  },
  "exports": {
    ".": {
      "import": "./dist/file-selector.js",
      "types": "./dist/types/file-selector.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rimraf dist .parcel-cache .dev-dist",
    "copy:types": "copyfiles -u 1 \"src/**/*.d.ts\" dist/types",
    "build": "yarn clean && parcel build --target module --no-content-hash --no-source-maps && yarn copy:types",
    "lint": "eslint . --ext .js",
    "prepublishOnly": "yarn build",
    "dev": "concurrently \"parcel watch --target dev --no-hmr\" \"sirv .dev-dist --port 1234 --dev\"",
    "start": "yarn dev"
  },
  "alias": {
    "@icons/common": "../../website/static/theme/icons/common"
  },
  "dependencies": {
    "@fontsource/roboto": "5.2.9",
    "@swc/helpers": "^0.5.17",
    "lit": "3.3.1",
    "@material/web": "^2.0.0"
  },
  "devDependencies": {
    "concurrently": "9.1.2",
    "copyfiles": "2.4.1",
    "eslint": "9.39.2",
    "parcel": "2.16.3",
    "rimraf": "6.1.2",
    "sirv-cli": "3.0.1"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.devops.etat-ge.ch/ctinexus/content/repositories/npm_release/"
  },
  "keywords": [
    "web‑components",
    "geneva",
    "footer",
    "design‑system"
  ]
}