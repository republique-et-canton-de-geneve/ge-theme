{
  "name": "@ael/ge-header",
  "version": "1.0.6",
  "private": false,
  "description": "Web‑component that renders public Geneva websites header.",
  "license": "Apache-2.0",
  "type": "module",
  "source": {
    "./dist/*": "./src/$1"
  },
  "module": "dist/ge-header.js",
  "targets": {
    "module": {
      "includeNodeModules": {
        "@ael/icons": true
      }
    }
  },
  "exports": {
    ".": {
      "import": "./dist/ge-header.js",
      "types": "./dist/types/ge-header.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "copy:types": "copyfiles -u 1 \"src/**/*.d.ts\" dist/types",
    "build": "yarn clean && parcel build src/ge-header.js --dist-dir dist --no-content-hash --no-source-maps && yarn copy:types",
    "lint": "eslint . --ext .js",
    "typecheck": "echo \"No TypeScript check needed for JS package (only manual .d.ts)\"",
    "prepublishOnly": "yarn build"
  },
  "alias": {
    "@icons/common": "../../website/static/theme/icons/common"
  },
  "dependencies": {
    "@fontsource/roboto": "5.2.5",
    "@material/web": "^2.4.1",
    "@swc/helpers": "^0.5.17",
    "lit": "3.3.0"
  },
  "devDependencies": {
    "copyfiles": "2.4.1",
    "eslint": "9.39.2",
    "parcel": "2.16.3",
    "rimraf": "6.0.1"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.devops.etat-ge.ch/ctinexus/content/repositories/npm_release/"
  },
  "keywords": [
    "web‑components",
    "geneva",
    "header",
    "design‑system"
  ]
}
