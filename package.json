{
  "name": "ge-theme",
  "description": "Thème et composants partagés pour les sites et applications sur ge.ch",
  "author": "État GE",
  "version": "0.1.1",
  "private": true,
  "license": "Apache-2.0",
  "packageManager": "yarn@1.22.22",
  "workspaces": [
    "packages/icons",
    "packages/utils/*",
    "packages/website",
    "packages/webcomponents/*"
  ],
  "browserslist": [
    "> 0.2% in CH and not dead",
    "Firefox ESR"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "clean": "turbo run clean",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,css}\"",
    "publish-packages": "turbo run build --filter=\"./packages/webcomponents/*\" && cd packages/webcomponents && yarn npm publish"
  },
  "alias": {
    "@icons/common": "./packages/website/static/theme/icons/common"
  },
  "devDependencies": {
    "@parcel/packager-raw-url": "2.14.4",
    "@parcel/resolver-glob": "2.14.4",
    "@parcel/transformer-inline-string": "2.14.4",
    "@parcel/transformer-webmanifest": "2.14.4",
    "eslint": "9.24.0",
    "eslint-config-prettier": "10.1.2",
    "parcel": "2.14.4",
    "prettier": "3.5.3",
    "process": "0.11.10",
    "prop-types": "15.8.1",
    "semver": "^7.7.1",
    "svgo": "^3",
    "turbo": "^2.5.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@fontsource/roboto": "5.2.5"
  }
}
